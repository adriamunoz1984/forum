<div class="row">
    <div class="col-md-8">
      <%= simple_form_for(@post, html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.input :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.input :content, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
</div>