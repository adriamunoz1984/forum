<div id="post_content">
  <h1>Edit Reply</h1>
  <div class="row">
    <div class="col-md-8">
      <%= simple_form_for([@post, @comment]) do |f| %>
        <div class="form-group">
          <%= f.input :comment, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Comment", class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
  </div>
</div>
